linewidth = 1,curvature = 0.6,arrow = arrow(length = unit(0.2,'cm'))) +
annotate('curve',x = as.Date("2021-10-01"),xend = as.Date("2021-01-01"), y = 155000 , yend = 140000,
linewidth = 1,curvature = 0.6,arrow = arrow(length = unit(0.2,'cm')))
Line_Breaches_Plot
